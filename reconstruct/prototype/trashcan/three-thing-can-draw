
  // Create two frame stick together 
  private JFrame frame1 = new JFrame("Frame 1");
  private JFrame frame2 = new JFrame("Frame 2");
  public UML_Editor( ){
    // set frames without titlebar
    frame1.setUndecorated(true);
    frame2.setUndecorated(true);
    // create a button on the frames then add action listener
    JButton titlebar = new JButton("Button 1");
    // JButton button2 = new JButton("Button 2");
    // set button size width full height 20px
    titlebar.setPreferredSize(new Dimension(frame1.getWidth(), 50));
    // button2.setPreferredSize(new Dimension(frame2.getWidth(), 20));
    // add button to frame
    frame1.add(titlebar);
    frame2.add(titlebar);
    

    // Set the size of the frame
    frame1.setSize(300,300);
    frame2.setSize(300,300);
    // Set the location of the frame
    frame1.setLocation(0,0);
    frame2.setLocation(300,0);
    // Set the default close operation
    frame1.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    frame2.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    // Set the layout of the frame
    frame1.setLayout(new FlowLayout());
    frame2.setLayout(new FlowLayout());
    // set frame visiable
    frame1.setVisible(true);
    frame2.setVisible(true);
    // frame1.setBackground(new Color(0, 0, 0, 0));
    frame1.setOpacity(1.0f);
    frame1.setContentPane(new ShadowPanel());
    frame2.setOpacity(1.0f);
    frame2.setContentPane(new ShadowPanel());


